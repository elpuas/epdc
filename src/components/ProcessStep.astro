---
import { Icon } from 'astro-icon/components';

interface Step {
    icon: string
    title: string
    description: string
}

interface Props {
    steps: Step[]
}

const { steps } = Astro.props;
---

<ol class="step-list">
    {steps.map((step, index) => (
        <li class="step">
            <div class="step-icon-wrapper">
                <Icon name={step.icon} class="step-icon" size="86" />
            </div>
            <div class="step-content">
                <p><strong class="accent">{index + 1}. {step.title}</strong></p>
                <p>{step.description}</p>
            </div>
        </li>
    ))}
</ol>

<style>
    .step-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .step {
        display: flex;
        align-items: flex-start;
        gap: 1.5rem;
        margin-bottom: 2.5rem;
        position: relative;

        .accent {
            font-size: var(--fontsize-h5);
            color: var(--color-tertiary);
            font-weight: 600;
        }
    }
    
    .step-icon-wrapper {
        flex-shrink: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100px;
        height: 100px;
        position: relative;
        z-index: 1;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: visible;
    }
    
    /* Direct icon animations in component */
    :global(.step-icon) {
        opacity: 0;
        transform: scale(0.2);
        will-change: transform, opacity;
        transform-origin: center;
    }
    
    :global(.step-icon.animate) {
        animation: iconBounce 0.7s cubic-bezier(0.17, 0.67, 0.34, 1.54) forwards;
        transform: scale(1);
    }
    
    @keyframes iconBounce {
        0% {
            opacity: 0;
            transform: scale(0.3) translateY(20px);
        }
        40% {
            opacity: 1;
        }
        60% {
            transform: scale(1.5) translateY(-5px);
        }
        80% {
            transform: scale(0.9) translateY(2px);
        }
        100% {
            opacity: 1;
            transform: scale(1) translateY(0);
        }
    }
    
    .step-content {
        flex: 1;
    }
    
    .step-content h3 {
        margin-top: 0;
        margin-bottom: 0.75rem;
        font-weight: 600;
    }
    
    .step-content p {
        margin-top: 0;
        margin-bottom: 0;
        line-height: 1.6;
    }
    
    @media (max-width: 640px) {
        .step {
            gap: 1rem;
        }
        
        .step-icon-wrapper {
            width: 48px;
            height: 48px;
        }
    }
</style>