---
import { Icon } from 'astro-icon/components';

interface Props {
    title: string;
    price: string;
    features: string[];
    icon?: string;
    highlight?: boolean;
}

const { title, price, features, icon = 'ph:rocket-launch-bold', highlight = false } = Astro.props;
---

<article class={`pricing-card ${highlight ? 'highlight' : ''}`} role="listitem" aria-labelledby={`pricing-title-${title.toLowerCase()}`}>
    <div class="card-header">
        <Icon name={icon} width="64" height="64" class="card-icon" aria-hidden="true" />
        <h3 id={`pricing-title-${title.toLowerCase()}`}>{title}</h3>
    </div>

    <ul class="feature-list" aria-label={`${title} plan features`}>
        {features.map((feature) => (
        <li>{feature}</li>
        ))}
    </ul>
    <p class="price" aria-label={`Price: ${price}`}>{price}</p>
</article>

<style scoped>
.pricing-card {
    padding: var(--space-xl);
    color: var(--color-black);
    border-radius: var(--space-sm);
    background-color: var(--color-tertiary);
    transition: border-color 0.3s, transform 0.3s;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-md);
    margin-top: var(--space-md);
    position: relative;
}

.pricing-card:hover {
    border-color: var(--color-secondary);
    transform: translateY(-16px);
    cursor: e-resize;
}

.highlight {
    color: var(--color-black);
    background-color: var(--color-secondary);
    margin-top: var(--space-md);

    @container (width > 768px) {
        margin-top: -36px;
    }
}

.card-header {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    width: 100%;
    justify-content: center;
    align-items: center;

    h3 {
        color: var(--color-black);
        font-size: var(--fontsize-h3);
    }
}

.card-icon {
    color: var(--color-black);
    transition: transform 0.3s;
    text-align: center;
}

.pricing-card:hover .card-icon {
    transform: scale(1.15) rotate(8deg);
}

.price {
    font-size: var(--fontsize-h4);
    font-weight: bold;
    color: var(--color-black);
    margin-top: auto;
}

.feature-list {
    list-style: square;
    padding: 0;
    display: grid;
    gap: var(--space-sm);
    
    li {
        color: var(--color-black);
        font-size: 14px;
    }
}
</style>
