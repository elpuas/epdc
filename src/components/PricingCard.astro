---
import { Icon } from 'astro-icon/components';

interface Props {
    title: string;
    price: string;
    features: string[];
    icon?: string;
    highlight?: boolean;
}

const { title, price, features, icon = 'ph:rocket-launch-bold', highlight = false } = Astro.props;
---

<article class={`pricing-card ${highlight ? 'highlight' : ''}`}>
    <div class="card-header">
        <Icon name={icon} width="40" height="40" class="card-icon" />
        <h3>{title}</h3>
    </div>

    <ul class="feature-list">
        {features.map((feature) => (
        <li>{feature}</li>
        ))}
    </ul>
    <p class="price">{price}</p>
</article>

<style scoped>
.pricing-card {
    padding: var(--space-xl);
    border: 1px solid var(--color-black);
    border-radius: var(--space-sm);
    transition: border-color 0.3s, transform 0.3s;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-md);
}

.pricing-card:hover {
    border-color: var(--color-secondary);
    transform: translateY(-4px);
}

.highlight {
    border: 2px solid var(--color-secondary);
    color: var(--color-white);
}

.card-header {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    width: 100%;
    justify-content: center;
    align-items: center;
}

.card-icon {
    color: var(--color-secondary);
    transition: transform 0.3s;
    text-align: center;
}

.pricing-card:hover .card-icon {
    transform: scale(1.15) rotate(8deg);
}

.price {
    font-size: 1.5rem;
    font-weight: bold;
}

.feature-list {
    list-style: none;
    padding: 0;
    display: grid;
    gap: var(--space-sm);
}
</style>
