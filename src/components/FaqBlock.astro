---
interface FAQ {
  question: string;
  answer: string;
}

const faqs: FAQ[] = [
    {
        question: 'How long does a typical project take?',
        answer: 'Most websites are completed in 4â€“6 weeks depending on scope and client responsiveness.'
    },
    {
        question: 'Do you offer ongoing support?',
        answer: 'Yes! Our maintenance plans include updates, support hours, and performance monitoring.'
    },
    {
        question: 'What platforms do you work with?',
        answer: 'We specialize in WordPress, WooCommerce, React, Astro, and Laravel.'
    },
    {
        question: 'Can I request changes during development?',
        answer: 'Absolutely. We work collaboratively and welcome feedback throughout the process.'
    }
];
---

<section class="faq-block">
    <h3>Frequently Asked Questions</h3>
    <dl>
    {faqs.map(({ question, answer }) => (
        <div class="faq-item">
        <dt class="faq-item-question">{question}</dt>
        <dd class="faq-item-answer">{answer}</dd>
        </div>
    ))}
    </dl>
</section>

<style scoped>
.faq-block {
