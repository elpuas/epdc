---
import type { CollectionEntry } from 'astro:content';
import '../styles/Button.module.css';
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
interface Props {
  project: CollectionEntry<'portfolio'>;
  lang: string; // 'en', 'es', 'it'
}

const { project, lang } = Astro.props;
const { title, description, image, tags } = project.data;
const projectUrl = `/${lang}/crafted-with-love/${project.slug}`;
---

<article class="project-card">
  <div class="card-inner">
    <div class="card-front">
      <a href={projectUrl} class="project-image-link" aria-label={`View details for ${title}`}>
        {image && (
          <div class="project-image-container">
            <Image 
              src={image} 
              alt="" 
              class="project-image"
              width={600} 
              height={400} 
              loading="lazy"
              decoding="async"
            />
          </div>
        )}
      </a>
    </div>

    <div class="card-back">
      <div class="project-content">
        <h3 class="project-title">{title}</h3>

        {description && (
          <p class="project-description">{description}</p>
        )}

        <a 
          href={projectUrl} 
          class="project-link button primary"
          aria-label={`View details for ${title}`}
        >
          <span class="project-link-text">
            {lang === 'en' ? 'View Project' : 
              lang === 'es' ? 'Ver Proyecto' : 
              'Visualizza Progetto'}
          </span>
        </a>
      </div>
    </div>
  </div>
</article>

<style>
.project-card {
	height: 320px;
	perspective: 1000px;
	position: relative;
	width: 100%;

  .card-inner {
    height: 100%;
    position: relative;
    transform-style: preserve-3d;
    transition: transform 0.6s ease-in-out;
    width: 100%;
  }

  &:hover .card-inner {
    transform: rotateY(180deg);
  }

  .card-front,
  .card-back {
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    height: 100%;
    left: 0;
    position: absolute;
    top: 0;
    width: calc(100% - 2rem);
  }

  .card-front {
    z-index: 2;
  }

  .card-back {
    background-color: var(--color-tertiary);
    border-radius: 16px;
    color: var(--color-primary);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    justify-content: flex-start;
    padding: var(--space-sm) var(--space-lg);
    transform: rotateY(180deg);

    .project-content {
      display: flex;
      flex-direction: column;
      justify-content: flex-start;

      .project-title {
        color: var(--color-primary);
        font-weight: 400;
        font-size: 28px;
        padding-bottom: 1rem;
        position: relative;

        &::after {
          content: '';
          position: absolute;
          bottom: 0;
          left: 0;
          width: 100%;
          height: 1px;
          background-color: var(--color-primary);
        }
      }
      
      .project-description {
        color: var(--color-primary);
        font-weight: 400;
        margin-bottom: 1rem;
        margin-top: 0;
      }
    }
  }

  .project-image-container {
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .project-image {
    object-fit: contain;
    width: 100%;
    height: 100%;
  }

  .button {
    border-radius: 9999px;
    cursor: pointer;
    display: inline-block;
    font-size: var(--fontsize-base);
    font-weight: bold;
    margin-left: auto;
    margin-top: var(--space-2xl);
    max-width: fit-content;
    padding: var(--space-sm) var(--space-lg);
    text-transform: uppercase;
    transition: transform 0.2s ease, box-shadow 0.2s ease;

    &:hover {
      background-color: var(--color-secondary);
      box-shadow: var(--box-shadow);
      transform: scale(1.05);
      
      span {
        color: var(--color-quaternary);
      }
    }
}

  .primary {
    background-color: var(--color-quaternary);
    border: none;
    color: var(--color-tertiary);
  }
}
</style> 