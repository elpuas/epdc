---
import type { CollectionEntry } from 'astro:content';
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
interface Props {
  project: CollectionEntry<'portfolio'>;
  lang: string; // 'en', 'es', 'it'
}

const { project, lang } = Astro.props;
const { title, description, image, tags } = project.data;
const projectUrl = `/${lang}/crafted-with-love/${project.slug}`;
---

<article class="project-card">
  <div class="card-inner">
    <div class="card-front">
      <a href={projectUrl} class="project-image-link" aria-label={`View details for ${title}`}>
        {image && (
          <div class="project-image-container">
            <Image 
              src={image} 
              alt="" 
              class="project-image"
              width={600} 
              height={400} 
              loading="lazy"
              decoding="async"
            />
          </div>
        )}
      </a>
    </div>

    <div class="card-back">
      <div class="project-content">
        <h3 class="project-title">{title}</h3>

        {description && (
          <p class="project-description">{description}</p>
        )}

        <a 
          href={projectUrl} 
          class="project-link button primary"
          aria-label={`View details for ${title}`}
        >
          <span class="project-link-text">
            {lang === 'en' ? 'View Project' : 
              lang === 'es' ? 'Ver Proyecto' : 
              'Visualizza Progetto'}
          </span>
          <Icon name="ph:arrow-right" width="16" height="16" />
        </a>
      </div>
    </div>
  </div>
</article>

<style>
.project-card {
	position: relative;
	width: 100%;
	height: 320px;
	perspective: 1000px;

  .card-inner {
    width: 100%;
    height: 100%;
    position: relative;
    transform-style: preserve-3d;
    transition: transform 0.6s ease-in-out;
  }

  &:hover .card-inner {
    transform: rotateY(180deg);
  }

  .card-front,
  .card-back {
    position: absolute;
    top: 0;
    left: 0;
    width: calc(100% - 2rem);
    height: 100%;
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
  }

  .card-front {
    z-index: 2;
  }

  .card-back {
    transform: rotateY(180deg);
    background-color: var(--color-tertiary);
    color: var(--color-primary);
    padding: var(--space-sm) var(--space-lg);
    display: flex;
    gap: var(--spacing-md);
    flex-direction: column;
    justify-content: flex-start;
    border-radius: 16px;

    .project-content {
      display: flex;
      flex-direction: column;
      justify-content: flex-start;

      .project-title {
        color: var(--color-primary);
        font-weight: 400;
        font-size: 28px;
        padding-bottom: 1rem;
        position: relative;

        &::after {
          content: '';
          position: absolute;
          bottom: 0;
          left: 0;
          width: 100%;
          height: 1px;
          background-color: var(--color-primary);
        }
      }
      
      .project-description {
        color: var(--color-primary);
        font-weight: 400;
        margin-bottom: 1rem;
        margin-top: 0;
      }
    }
  }

  .project-image-container {
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .project-image {
    object-fit: contain;
    width: 100%;
    height: 100%;
  }
}
</style> 