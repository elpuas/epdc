---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import type { Language } from '../i18n/utils';

type Props = CollectionEntry<'portfolio'>['data'];

const { title, description = '', date, image, lang = 'en' as Language, tags = [] } = Astro.props;
---

<html lang={lang}>
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.project-container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 2rem 1rem;
			}
			
			.project-header {
				margin-bottom: 3rem;
				text-align: center;
			}
			
			.project-title {
				font-size: 2.5rem;
				font-weight: 700;
				margin-bottom: 1rem;
				line-height: 1.2;
			}
			
			.project-meta {
				margin-bottom: 2rem;
				color: var(--color-text-secondary, #718096);
			}
			
			.project-date {
				font-size: 0.95rem;
			}
			
			.project-tags {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5rem;
				justify-content: center;
				margin-top: 1rem;
			}
			
			.project-tag {
				background-color: var(--color-tag-bg, #edf2f7);
				color: var(--color-tag-text, #4a5568);
				font-size: 0.85rem;
				padding: 0.35rem 0.75rem;
				border-radius: 9999px;
				font-weight: 500;
			}
			
			.project-featured-image {
				width: 100%;
				max-height: 600px;
				object-fit: cover;
				border-radius: 0.75rem;
				margin-bottom: 2rem;
				box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
			}
			
			.project-content {
				max-width: 800px;
				margin: 0 auto;
				font-size: 1.1rem;
				line-height: 1.7;
			}
			
			.project-content h1 {
				font-size: 2rem;
				margin: 2rem 0 1rem;
			}
			
			.project-content h2 {
				font-size: 1.5rem;
				margin: 1.8rem 0 1rem;
				color: var(--color-primary, #4361ee);
			}
			
			.project-content h3 {
				font-size: 1.25rem;
				margin: 1.6rem 0 1rem;
			}
			
			.project-content p {
				margin-bottom: 1.5rem;
			}
			
			.project-content ul, 
			.project-content ol {
				margin-bottom: 1.5rem;
				padding-left: 1.5rem;
			}
			
			.project-content li {
				margin-bottom: 0.5rem;
			}
			
			.project-content blockquote {
				border-left: 4px solid var(--color-primary, #4361ee);
				padding-left: 1rem;
				font-style: italic;
				margin: 1.5rem 0;
				color: var(--color-text-secondary, #718096);
			}
			
			@media (max-width: 768px) {
				.project-title {
					font-size: 2rem;
				}
				
				.project-content {
					font-size: 1rem;
				}
			}
		</style>
	</head>

	<body>
		<Header lang={lang} />
		<main class="project-container">
			<article>
				<header class="project-header">
					<h1 class="project-title">{title}</h1>
					<div class="project-meta">
						<div class="project-date">
							<FormattedDate date={date} />
						</div>
						{tags && tags.length > 0 && (
							<div class="project-tags">
								{tags.map(tag => (
									<span class="project-tag">{tag}</span>
								))}
							</div>
						)}
					</div>
				</header>
				
				{image && <img src={image} alt="" class="project-featured-image" />}
				
				<div class="project-content">
					<slot />
				</div>
			</article>
		</main>
		<Footer lang={lang} />
	</body>
</html> 