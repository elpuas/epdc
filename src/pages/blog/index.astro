---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import type { CollectionEntry } from 'astro:content';

// Define a type that represents the combined possible data shapes
type BlogPost = CollectionEntry<'blog'>;
type BlogData = BlogPost['data'];

const posts = (await getCollection('blog')).sort(
	(a: BlogPost, b: BlogPost) => {
		const dateA = (a.data as any).pubDate || a.data.date;
		const dateB = (b.data as any).pubDate || b.data.date;
		
		// Skip posts without dates
		if (!dateA) return 1;
		if (!dateB) return -1;
		
		return dateB.valueOf() - dateA.valueOf();
	}
);

const lang = "en"; // Default language for blog
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header lang={lang} />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<img 
										width={720} 
										height={360} 
										src={(post.data as any).heroImage || post.data.image || '/blog-placeholder.jpg'} 
										alt="" 
									/>
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={(post.data as any).pubDate || post.data.date} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer lang={lang} />
	</body>
</html>
