---
import Layout from '../../layouts/Layout.astro';

const title = 'Contact Us';
const description = 'Get in touch with ElPuas Digital Crafts';
const lang = 'en';
---

<Layout {title} {description} {lang}>
  <h1>Contact Us</h1>
  <p>Get in touch with our team.</p>

  <section class="contact-intro">
    <h1>Let’s Build Something Great Together</h1>
    <p>Fill out the form — we’ll get back to you within 24 hours, no robots involved.</p>
  </section>
  
  <form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field" class="contact-form">
    <input type="hidden" name="form-name" value="contact" />
  
    <p class="hidden">
      <label>Don’t fill this out if you're human: <input name="bot-field" /></label>
    </p>
  
    <p>
      <label>What's your name? *</label>
      <input type="text" name="name" placeholder="John Doe" required />
    </p>
  
    <p>
      <label>Your best email *</label>
      <input type="email" name="email" placeholder="you@example.com" required />
    </p>
  
    <p>
      <label>What do you need? *</label>
      <select name="service" required>
        <option value="">Pick a service...</option>
        <option value="Full Website">I need the full package (Design + Dev + Hosting)</option>
        <option value="E-Commerce">An online store that actually sells</option>
        <option value="Maintenance">Keep my site fast & secure</option>
        <option value="White-Label">White-label dev for my agency</option>
        <option value="Other">Not sure yet, let's chat</option>
      </select>
    </p>
  
    <p>
      <label>Tell us your story *</label>
      <textarea name="message" rows="5" placeholder="We’d love to hear about your project, goals, or even challenges..." required></textarea>
    </p>
  
    <p>
      <label>
        <input type="checkbox" name="consent" required />
        I’m happy to hear from ElPuas Digital Crafts.
      </label>
    </p>
  
    <p>
      <button type="submit">Let’s Talk</button>
    </p>
  </form>
</Layout> 