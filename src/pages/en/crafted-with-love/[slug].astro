---
import { type CollectionEntry, getCollection } from 'astro:content';
import ProjectLayout from '../../../layouts/ProjectLayout.astro';

export async function getStaticPaths() {
	// Filter portfolio items for English language
	const projects = await getCollection('portfolio', ({ data }) => {
		return data.lang === 'en';
	});
	
	console.log("DEBUG - EN Portfolio getStaticPaths found projects:", projects.length);
	console.log("DEBUG - EN Portfolio projects slugs:", projects.map(p => p.slug).join(", "));
	
	// Map projects to paths using project.slug
	return projects.map((project) => ({
		params: { slug: project.slug },
		props: project,
	}));
}

type Props = CollectionEntry<'portfolio'>;

const project = Astro.props;
const { Content } = await project.render();
---

<ProjectLayout {...project.data}>
	<Content />
</ProjectLayout> 