---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/Button.astro';
import ServiceDetails from '../../components/ServiceDetails.astro';
import FaqBlock from '../../components/FaqBlock.astro';
import TrustedBy from '../../components/TrustedBy.astro';
import PricingCard from '../../components/PricingCard.astro';
import { Icon } from 'astro-icon/components';
import styles from '../../styles/Services.module.css';
const title = 'I Nostri Servizi';
const description = 'Esplora i nostri servizi di artigianato digitale';
const lang = 'it';
---

<Layout {title} {description} {lang}>
  <section class={styles.hero}>
    <h1>Servizi Digitali <span class={styles.accent}>Intelligenti</span> e Scalabili</h1>
    <h5>Dai siti web artigianali al supporto continuo — aiutiamo la tua azienda a prosperare online.</h5>
    <Button href="/contact" label="Parliamone" />
  </section>

  <section class={styles.servicesIntro}>
    <h2>Cosa Offriamo</h2>
    <p class={`${styles.accent} ${styles.subtitle}`}>Dal lancio iniziale alla crescita a lungo termine, forniamo artigianato digitale completo su misura per le esigenze della tua azienda.</p>
    <div class={styles.servicesIntroGrid}>
        <ServiceDetails 
          icon="ph:flask" 
          title="Sviluppo Web Personalizzato" 
          description="Siti web e piattaforme su misura costruiti per prestazioni, flessibilità e scalabilità. Nessun template, solo codice artigianale." 
          features={["Design responsive e mobile-first", "Tempi di caricamento rapidi e ottimizzazione SEO", "Integrazioni CMS personalizzate", "Connettività API e servizi di terze parti"]}
          image="/service-one.png"
          alt="Screenshot del progetto di sito web personalizzato FishCostaRica.com"
          reverse={true}
        />

        <ServiceDetails 
          icon="ph:shopping-cart" 
          title="Soluzioni E-Commerce" 
          description="Progettiamo e sviluppiamo negozi online che convertono. WooCommerce o headless — ti aiutiamo a vendere di più con meno attrito." 
          features={["Pagine prodotto focalizzate sulla conversione", "Esperienze di checkout ottimizzate", "Integrazione di inventario e logistica", "Report personalizzati e automazione"]}
          image="/mobile.png"
          alt="Screenshot del progetto di sito web personalizzato FishCostaRica.com"
          reverse={false}
        />

        <ServiceDetails 
          icon="ph:lifebuoy" 
          title="Manutenzione e Supporto" 
          description="Tranquillità attraverso supporto esperto, monitoraggio delle prestazioni e aggiornamenti programmati. Piani mensili flessibili per aziende in crescita." 
          features={["Aggiornamenti programmati di plugin e temi", "Monitoraggio delle prestazioni e dell'uptime", "Tempo di sviluppo esperto incluso", "Correzioni di bug prioritarie"]}
          image="/service-one.png"
          alt="Screenshot del progetto di sito web personalizzato FishCostaRica.com"
          reverse={true}
        />

        <ServiceDetails 
          icon="ph:mask-happy" 
          title="Servizi White-Label" 
          description="Lavoriamo discretamente dietro le quinte, così che la tua agenzia possa scalare senza sovraccarico. Partner di sviluppo affidabili per agenzie di design e consulenti." 
          features={["Codice invisibile pronto per il cliente", "Consegna rapida e preventivi definiti", "Supporto di sviluppo affidabile", "Partnership confidenziali"]}
          image="/mobile.png"
          alt="Screenshot del progetto di sito web personalizzato FishCostaRica.com"
          reverse={false}
        />
    </div>
  </section>

  <section class={styles.pricing}>
    <h2>Piani Che Crescono Con Te</h2>
    <p class="subtitle">Scegli il piano che si adatta al tuo ritmo — ognuno supportato da esperti e potente tempo di sviluppo.</p>
    <div class={styles.pricingGrid}>
      <PricingCard
        title="Base"
        price="$150/mese"
        icon="ph:browser"
        features={[
          'Aggiornamenti regolari di WordPress per sicurezza e stabilità',
          'Backup programmati per prevenire la perdita di dati',
          'Sicurezza rafforzata contro virus e attacchi',
          'Ottimizzazione delle prestazioni per tempi di caricamento più rapidi',
          'Supporto tecnico per problemi relativi al web',
          'Canale Slack dedicato per emergenze',
          'Web design + supporto',
          'Manutenzione di base',
          'Monitoraggio email e uptime'
        ]}
      />

      <PricingCard
        title="Crescita"
        price="$180/mese"
        icon="ph:chart-line-up-bold"
        highlight
        features={[
          'Aggiornamenti regolari di WordPress per sicurezza e stabilità',
          'Backup programmati per prevenire la perdita di dati',
          'Sicurezza rafforzata contro virus e attacchi',
          'Ottimizzazione delle prestazioni per tempi di caricamento più rapidi',
          'Supporto tecnico per problemi relativi al web',
          'Canale Slack dedicato per emergenze',
          'Web design + supporto',
          'Manutenzione prioritaria',
          'Monitoraggio uptime',
          'Hosting incluso',
          '4 ore di sviluppo / mese'
        ]}
      />

      <PricingCard
        title="Pro"
        price="$250/mese"
        icon="ph:rocket-launch-bold"
        features={[
          'Aggiornamenti regolari di WordPress per sicurezza e stabilità',
          'Backup programmati per prevenire la perdita di dati',
          'Sicurezza rafforzata contro virus e attacchi',
          'Ottimizzazione delle prestazioni per tempi di caricamento più rapidi',
          'Supporto tecnico per problemi relativi al web',
          'Canale Slack dedicato per emergenze',
          'Web design + supporto',
          'Manutenzione prioritaria',
          'Monitoraggio uptime',
          '8 ore di sviluppo / mese',
          'Supporto prioritario'
        ]}
      />
    </div>
  </section>

  <section class={styles.testimonial}>
    <h3>Partnership Dietro le Quinte</h3>
    <p class={styles.accent}>
      Supportiamo agenzie e studi attraverso un'esecuzione affidabile in white-label.
    </p>
    <blockquote>
      "Lavorare con ElPuas è stato un punto di svolta. Consegnano costantemente lavoro di alta qualità nei tempi previsti, gestiscono specifiche tecniche complesse con facilità e migliorano la qualità dell'output della nostra agenzia. I nostri clienti sono felici — e questo ci fa apparire al meglio."
      <footer>— Avalanche Advertising (Partner White-label)</footer>
    </blockquote>
  </section>

  <TrustedBy title="Scelto da brand lungimiranti" />

  <FaqBlock />

  <section class={styles.ctaBlock}>
    <h2>Pronto a lanciare o scalare il tuo prossimo progetto digitale?</h2>
    <Button href="/contact" label="Inizia Oggi" />
  </section>
</Layout> 